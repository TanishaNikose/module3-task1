pipeline{
    agent any

    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage('Build'){
            steps{
                sh 'docker build -t flask-app:${BUILD_NUMBER} .'
            }

        }

        stage('Test'){
            steps{
                sh 'echo "Running basic tests..."'
            }
        }

        stage('Deploy to Staging'){
            when {
                branch 'develop'
            }
            steps{
                sh 'echo "Deploying to staging environement"'
            }
        }

        post{
            success{
                echo 'Pipeline executed successfully'
            }
            failure{
                echo 'Pipeline failed'
            }
        }
    }

}