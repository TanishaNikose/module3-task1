pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Windows par agar docker command nahi mil rahi toh verify karein
                sh 'docker build -t flask-app:${BUILD_NUMBER} .'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Running basic tests..."'
            }
        }

        stage('Deploy to Staging') {
            when {
                branch 'develop'
            }
            steps {
                sh 'echo "Deploying to staging environment"'
            }
        }
    } // <--- Stages yahan khatam hona chahiye

    post {
        success {
            echo 'Pipeline executed successfully'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}